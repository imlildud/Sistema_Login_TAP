            <Label text="Confirmar Contrase침a:" GridPane.rowIndex="5" />

            <TextField fx:id="txtNombreCompleto" GridPane.columnIndex="1" />
            <DatePicker fx:id="dpFechaNacimiento" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="txtCorreo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <PasswordField fx:id="pfPassword" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <PasswordField fx:id="pfConfirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        </children>
    </GridPane>

    <Label fx:id="lblMensaje" wrapText="true" maxWidth="350" />

    <Button fx:id="btnRegistrar" text="Registrar" defaultButton="true"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnIniciarSesion" text="Iniciar Sesi칩n" />
